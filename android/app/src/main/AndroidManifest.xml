<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Required for secondary display presentation -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <!-- Required for VirtualDeviceManager to emulate physical keyboard (Android 12+) -->
    <uses-permission android:name="android.permission.CREATE_VIRTUAL_DEVICE"/>

    <application
        android:label="TeleDeck"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- Main Activity - Settings/Onboarding Screen -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <meta-data
              android:name="io.flutter.embedding.android.NormalTheme"
              android:resource="@style/NormalTheme"
              />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- TeleDeck IME Service -->
        <service
            android:name=".TeleDeckIMEService"
            android:label="TeleDeck Keyboard"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:exported="true">
            <intent-filter>
                <action android:name="android.view.InputMethod"/>
            </intent-filter>
            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method"/>
        </service>

        <!-- Don't delete the meta-data below.
             This is used by the Flutter tool to generate GeneratedPluginRegistrant.java -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <!-- Enable Impeller for better rendering on secondary displays -->
        <meta-data
            android:name="io.flutter.embedding.android.EnableImpeller"
            android:value="true" />

        <!-- BroadcastReceiver for keyboard toggle actions -->
        <!-- Ayaneo Pocket DS can bind physical buttons to these actions -->
        <receiver
            android:name=".ToggleKeyboardReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="app.gsmlg.tele_deck.TOGGLE_KEYBOARD"/>
                <action android:name="app.gsmlg.tele_deck.SHOW_KEYBOARD"/>
                <action android:name="app.gsmlg.tele_deck.HIDE_KEYBOARD"/>
            </intent-filter>
        </receiver>
    </application>

    <!-- Required to query activities that can process text -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>
</manifest>
